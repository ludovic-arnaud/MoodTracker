            android:layout_gravity="right|center_vertical"
            android:src="@drawable/ic_comment_black_48px"
            android:background="@android:color/transparent"
            android:layout_marginRight="10dp"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/activity_history_fri"
